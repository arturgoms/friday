# ==============================================================================
# Friday AI Assistant - Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# ==============================================================================
# Core System Settings
# ==============================================================================

# Debug mode (true/false)
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Server configuration (if running web interface)
HOST=0.0.0.0
PORT=8080


# ==============================================================================
# User Configuration
# ==============================================================================

# Your name (used in prompts and personalization)
USER_NAME=Artur

# Your timezone (IANA format: America/Sao_Paulo, Europe/London, etc.)
USER_TIMEZONE=America/Sao_Paulo

# User profile file in vault (optional)
USER_PROFILE_FILE=Artur Gomes.md


# ==============================================================================
# LLM Configuration
# ==============================================================================

# Model name (must match what vLLM is serving)
LLM_MODEL_NAME=NousResearch/Hermes-4-14B

# vLLM base URL (usually localhost:8000)
LLM_BASE_URL=http://localhost:8000/v1

# Temperature (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.6

# Maximum tokens per response
LLM_MAX_TOKENS=4096


# ==============================================================================
# Paths Configuration
# ==============================================================================

# Project root directory
PATHS_ROOT=/home/artur/friday

# Brain/knowledge directory (for future use)
PATHS_BRAIN=/home/artur/friday/brain

# Data directory (database, cache, etc.)
PATHS_DATA=/home/artur/friday/data

# Logs directory
PATHS_LOGS=/home/artur/friday/logs

# Config directory (for future use)
PATHS_CONFIG=/home/artur/friday/src/config


# ==============================================================================
# Telegram Bot Configuration
# ==============================================================================

# Telegram bot token from @BotFather
# Get yours at: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Your Telegram user ID (numeric)
# Find yours by messaging @userinfobot on Telegram
TELEGRAM_USER_ID=111514095


# ==============================================================================
# API Keys (Optional Services)
# ==============================================================================

# Friday API (if using API mode - optional)
FRIDAY_API_URL=http://localhost:8080
FRIDAY_API_KEY=


# ==============================================================================
# Calendar Integration
# ==============================================================================

# Google Calendar ID (usually your Gmail address)
GOOGLE_CALENDAR_ID=your.email@gmail.com

# OR use Nextcloud CalDAV (comment out Google Calendar if using this)
# NEXTCLOUD_CALDAV_URL=https://your-nextcloud.com/remote.php/dav/
# NEXTCLOUD_USERNAME=your_username
# NEXTCLOUD_PASSWORD=your_app_password


# ==============================================================================
# Weather Service
# ==============================================================================

# OpenWeatherMap API Key
# Get free key at: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# Alternative: WeatherAPI.com (if not using OpenWeatherMap)
# WEATHER_API_KEY=your_weatherapi_key_here

# Location for weather (City,Country or lat,lon)
WEATHER_LOCATION=Curitiba,BR
# WEATHER_LAT=-25.4284
# WEATHER_LON=-49.2733


# ==============================================================================
# Health Data Integration (Optional)
# ==============================================================================

# InfluxDB connection for Garmin health data
# Leave empty if not using health features
INFLUXDB_HOST=192.168.1.16
INFLUXDB_PORT=8088
INFLUXDB_DATABASE=GarminStats
INFLUXDB_USERNAME=
INFLUXDB_PASSWORD=


# ==============================================================================
# Homelab Monitoring (Optional)
# ==============================================================================

# Glances API endpoints (for system monitoring)
# Format: hostname:port (comma-separated for multiple hosts)
GLANCES_HOSTS=192.168.1.16:61208,192.168.1.17:61208


# ==============================================================================
# Obsidian Vault (Optional)
# ==============================================================================

# Path to your Obsidian vault
VAULT_PATH=/home/artur/Documents/Obsidian/MyVault

# Vault paths for specific notes
VAULT_USER_NOTE=People/Artur Gomes.md
VAULT_FRIDAY_NOTE=Friday.md


# ==============================================================================
# Media Control (Optional)
# ==============================================================================

# Media player to control (spotify, vlc, etc.)
MEDIA_PLAYER=spotify


# ==============================================================================
# Awareness Engine Configuration
# ==============================================================================

# Check interval in seconds (how often to collect data)
AWARENESS_CHECK_INTERVAL=10.0

# Quiet hours (don't send notifications during these times)
# Format: HH:MM in 24-hour format
AWARENESS_QUIET_HOURS_START=22:00
AWARENESS_QUIET_HOURS_END=08:00

# Maximum reach-outs per day (daily notification budget)
AWARENESS_MAX_REACH_OUTS_PER_DAY=5

# Cooldown between notifications (minutes)
AWARENESS_COOLDOWN_MINUTES=60

# Data retention (days)
AWARENESS_SNAPSHOT_RETENTION_DAYS=7
AWARENESS_INSIGHT_RETENTION_DAYS=30


# ==============================================================================
# Thresholds & Alerts
# ==============================================================================

# Health thresholds
THRESHOLD_SLEEP_SCORE_WARNING=50
THRESHOLD_SLEEP_SCORE_CRITICAL=30
THRESHOLD_STRESS_WARNING=50
THRESHOLD_STRESS_CRITICAL=70

# System thresholds
THRESHOLD_DISK_WARNING=80
THRESHOLD_DISK_CRITICAL=90
THRESHOLD_CPU_WARNING=80
THRESHOLD_CPU_CRITICAL=95
THRESHOLD_MEMORY_WARNING=80
THRESHOLD_MEMORY_CRITICAL=90


# ==============================================================================
# Advanced Settings (Usually don't need to change)
# ==============================================================================

# Database file name
DATABASE_FILE=friday.db

# Embeddings model (for knowledge/semantic search)
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDINGS_DEVICE=cpu

# Logging format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Enable logfire telemetry (true/false)
LOGFIRE_ENABLED=true


# ==============================================================================
# Development/Testing
# ==============================================================================

# Test mode (disables some features for testing)
# TEST_MODE=false

# Mock external services (for testing without APIs)
# MOCK_WEATHER=false
# MOCK_CALENDAR=false
# MOCK_HEALTH=false


# ==============================================================================
# Notes
# ==============================================================================
# 
# Required for basic functionality:
# - USER_NAME, USER_TIMEZONE
# - LLM_MODEL_NAME, LLM_BASE_URL
# - TELEGRAM_BOT_TOKEN, TELEGRAM_USER_ID
#
# Optional but recommended:
# - GOOGLE_CALENDAR_ID or NEXTCLOUD_* (for calendar features)
# - OPENWEATHERMAP_API_KEY (for weather features)
#
# Optional for advanced features:
# - INFLUXDB_* (for health monitoring)
# - VAULT_PATH (for Obsidian integration)
# - GLANCES_HOSTS (for homelab monitoring)
#
# ==============================================================================
