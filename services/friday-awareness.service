[Unit]
Description=Friday Awareness Engine
After=network.target friday-vllm.service
Wants=friday-vllm.service

[Service]
Type=simple
WorkingDirectory=/home/artur/friday
Environment="PATH=/home/artur/.local/bin:/usr/local/bin:/usr/bin:/bin"
Environment="PYTHONPATH=/home/artur/friday"

# Wait for vLLM to be ready before starting
ExecStartPre=/bin/bash -c 'for i in {1..30}; do curl -s http://localhost:8000/v1/models >/dev/null && exit 0; sleep 3; done; exit 1'

# Use Awareness Engine
ExecStart=/home/artur/.local/bin/pipenv run python -m src.awareness.engine

# Allow enough time for health check
TimeoutStartSec=90

Restart=always
RestartSec=10
StandardOutput=append:/home/artur/friday/logs/friday-awareness.log
StandardError=append:/home/artur/friday/logs/friday-awareness.log

[Install]
WantedBy=default.target
