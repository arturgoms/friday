[Unit]
Description=Friday 3.0 Core Service
After=network-online.target friday-vllm.service
Wants=network-online.target

[Service]
Type=simple
User=artur
WorkingDirectory=/home/artur/friday
Environment="PATH=/home/artur/.local/bin:/usr/local/bin:/usr/bin:/bin"
Environment="PYTHONPATH=/home/artur/friday"
ExecStart=/home/artur/.local/bin/pipenv run uvicorn src.api.routes:app --host 0.0.0.0 --port 8080 --log-level info
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
